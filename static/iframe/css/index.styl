@import "../../../src/renderer/common/stylus/index.styl"
@import "../../../src/renderer/common/stylus/variable.styl"
html
  background $main-bgcolor
  #app
    .page
      page-break-after always
      margin-bottom 10px
      .report-wrapper
        width 595px
        background $color-text
        padding 10px
        margin 0 auto
      .title
        display flex
        justify-content space-between
        padding 5px 0
        cursor pointer
        .title-name
          text-align center
          p
            font-size 0.95rem
            font-weight 600
            line-height 1.8rem
            color $color-text8
          .hospital_name
            color $color-text14
        .create
          display flex
          justify-content space-between
          flex-direction column
          i
            height 1px
      .code
        display flex
        justify-content space-between
        div
          display flex
          width 50%
          justify-content space-between
          span
            width 50%
          p
            flex 1 0 auto
            span
              font-size .9rem
              line-height 1.2rem
              color $color-theme
              text-overflow ellipsis
              overflow hidden
              white-space nowrap
      .line
        border 1px solid $color-theme
        width 100%
      .userMsg
        padding 3px 0
        ul
          border-top 1px solid $color-border
          border-bottom 1px solid $color-border
          padding 5px 0
          li
            font-size .75rem
            line-height 1rem
            padding 5px 0
            color $color-theme
          .userName
            display flex
            justify-content space-between
            color $color-theme
      .qul
        display flex
        border-bottom 1px solid $color-border
        padding 5px 0
        .qui-title
          width 70px
          color $color-theme
          p
            font-size 0.8rem
            line-height 1.4rem
        .qul-box
          flex 1 1 auto
          pointer-events none
          .qul-content
            display flex
            justify-content space-between
            li, .ivu-checkbox-group
              display flex
              justify-content space-between
              flex-direction column
              color $color-theme
              font-size .75rem
              line-height 1.4rem
              .middle
                font-size .75rem
                line-height 1.4rem
            .qul-item3
              padding-right 15px
            .status
              width 50px
      .select-box
        .select-bg
          padding 8px 0
          border-bottom 1px solid $color-border
          .slect-items
            display flex
            flex-wrap wrap
            pointer-events none
            li
              width 45%
              .item-scales
                display flex
            .item
              .item-name
                .item-purple
                  font-size 0.75rem
                  line-height 1.4rem
                  display inline-block
                  width 85px
                  text-align right
                  color $main-basecolor
            .item3
              margin-top 0
            .item5
              margin-top 0
          .cut-img
            display flex
            justify-content space-between
            ul
              display flex
              padding 10px 0
              width 90%
              flex-wrap wrap
              min-height 380px
              li
                width 46%
                padding 10px
                height 200px
                img
                  width 100%
                  height 100%
          .doc-result
            color $color-theme
          .doc-result-last
            padding-bottom 30px
          .doc-msg
            font-size 1rem
            line-height 2rem
            color $color-text14
          .result-text
            padding 5px 20px
            border 0
            border-radius 5px
            font-size 0.8rem
            line-height 1.5rem
      .doc-signature
        display flex
        border-bottom 1px solid $color-border
        p
          flex 1
          color $color-theme
          span
            font-size 0.8rem
          line-height 1.5rem
      .doc-link
        .other_text
          font-size 0.8rem
          line-height 1.5rem
          color $color-text15
      .counts
        text-align center
        font-size 0.85rem
        line-height 1.5rem
        color $color-text15
    @media print
        .counts
          display none
        background
          none
        .other_text
            color $color-text15
    @page
      size A4